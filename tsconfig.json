{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "ES2015"
  , "moduleResolution": "Node"
  , "allowSyntheticDefaultImports": true
  , "removeComments": true
  , "strict": true
  , "noUnusedLocals": true
  , "noUnusedParameters": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    }
  }
, "include": [
    "src"
  ]
}
